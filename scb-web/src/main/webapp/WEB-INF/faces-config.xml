<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<!-- This file is used for specific JSF configurations -->
	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>de</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>com.corryn.scb.application.message.MessageResourceBundle</base-name>
			<var>msg</var>
		</resource-bundle>
		<action-listener>org.primefaces.application.DialogActionListener</action-listener>
		<navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
		<view-handler>org.primefaces.application.DialogViewHandler</view-handler>
	</application>

	<!-- Factory configurations -->
	<factory>
		<exception-handler-factory>com.corryn.scb.application.exception.ApplicationExceptionHandlerFactory</exception-handler-factory>
	</factory>
</faces-config>